{
  "openapi": "3.1.0",
  "info": {
    "title": "SmithTech API with Insights",
    "description": "API endpoints for SmithTech with insights and operation IDs.",
    "version": "v1.0.0"
  },
  "servers": [
    {
      "url": "https://smithtech.io/"
    }
  ],
  "paths": {
    "/api/systems": {
      "get": {
        "description": "Retrieve a list of all hospital systems in the database. This endpoint serves as a reference table for translating hospital system names to their corresponding SystemIDs, which may be required for other routes.",
        "operationId": "getHospitalSystems",
        "responses": {
          "200": {
            "description": "A list of hospital systems with details.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "Description": {
                        "type": "string",
                        "description": "A brief description of the hospital system."
                      },
                      "FoundedYear": {
                        "type": "integer",
                        "nullable": true,
                        "description": "The year the hospital system was founded. Null if not available."
                      },
                      "Headquarters": {
                        "type": "string",
                        "description": "Location of the hospital system's headquarters."
                      },
                      "SystemID": {
                        "type": "integer",
                        "description": "Unique identifier for the hospital system."
                      },
                      "SystemName": {
                        "type": "string",
                        "description": "Name of the hospital system."
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid request parameters."
          },
          "500": {
            "description": "Internal server error."
          }
        }
      }
    },
    "/api/locations": {
      "get": {
        "description": "Retrieve a list of all hospital locations. Each location is associated with a hospital system via its SystemID, linking to the /api/systems endpoint.",
        "operationId": "getHospitalLocations",
        "responses": {
          "200": {
            "description": "A list of hospital locations with details.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "Address": {
                        "type": "string",
                        "description": "The physical address of the hospital location."
                      },
                      "BaseURL": {
                        "type": "string",
                        "format": "uri",
                        "description": "The base URL of the hospital location."
                      },
                      "ChargesURL": {
                        "type": "string",
                        "format": "uri",
                        "description": "URL providing information on hospital charges."
                      },
                      "City": {
                        "type": "string",
                        "description": "The city where the hospital location is situated."
                      },
                      "EligURL": {
                        "type": "string",
                        "format": "uri",
                        "description": "URL providing information on insurance eligibility."
                      },
                      "LocationID": {
                        "type": "integer",
                        "description": "Unique identifier for the hospital location."
                      },
                      "LocationName": {
                        "type": "string",
                        "description": "Name of the hospital location."
                      },
                      "Phone": {
                        "type": "integer",
                        "description": "Contact phone number for the hospital location."
                      },
                      "State": {
                        "type": "string",
                        "description": "The state where the hospital location is situated."
                      },
                      "SystemID": {
                        "type": "integer",
                        "description": "Identifier of the hospital system to which the location belongs."
                      },
                      "ZipCode": {
                        "type": "integer",
                        "description": "ZIP code of the hospital location."
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid request parameters."
          },
          "500": {
            "description": "Internal server error."
          }
        }
      }
    },
    "/react/eligibility/carriers": {
      "get": {
        "description": "Retrieve a list of carriers for all the insurance plans. Each carrier is identified by a unique CarrierID and has a corresponding CarrierName.",
        "operationId": "getInsuranceCarriers",
        "responses": {
          "200": {
            "description": "A list of insurance carriers with their IDs and names.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "CarrierID": {
                        "type": "integer",
                        "description": "Unique identifier for the insurance carrier."
                      },
                      "CarrierName": {
                        "type": "string",
                        "description": "Name of the insurance carrier."
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid request parameters."
          },
          "500": {
            "description": "Internal server error."
          }
        }
      }
    },
    "/react/eligibility/insurances": {
      "get": {
        "description": "Retrieve a list of all insurance plans. Each plan is associated with a carrier and is identified by a unique PlanID, along with the CarrierID, CarrierName, and InsuranceTypeID.",
        "operationId": "getInsurancePlans",
        "responses": {
          "200": {
            "description": "A list of insurance plans with details on carriers and plan types.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "CarrierID": {
                        "type": "integer",
                        "description": "Unique identifier for the insurance carrier."
                      },
                      "CarrierName": {
                        "type": "string",
                        "description": "Name of the insurance carrier."
                      },
                      "InsuranceTypeID": {
                        "type": "integer",
                        "description": "Identifier for the type of insurance."
                      },
                      "PlanID": {
                        "type": "integer",
                        "description": "Unique identifier for the insurance plan."
                      },
                      "PlanName": {
                        "type": "string",
                        "description": "Name of the insurance plan."
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid request parameters."
          },
          "500": {
            "description": "Internal server error."
          }
        }
      }
    },
    "/react/eligibility/insurance-types": {
      "get": {
        "description": "Retrieve a list of different insurance types. Each type is identified by a unique InsuranceTypeID and has a corresponding InsuranceType name. This serves as a reference table for various insurance types.",
        "operationId": "getInsuranceTypes",
        "responses": {
          "200": {
            "description": "A list of insurance types with their IDs and names.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "InsuranceType": {
                        "type": "string",
                        "description": "The name of the insurance type."
                      },
                      "InsuranceTypeID": {
                        "type": "integer",
                        "description": "Unique identifier for the insurance type."
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid request parameters."
          },
          "500": {
            "description": "Internal server error."
          }
        }
      }
    },
    "/react/eligibility/insurance-plans/{CarrierID}": {
      "get": {
        "description": "Retrieve all insurance plans associated with a specific CarrierID. This endpoint provides detailed information about each plan, including the PlanID, PlanName, and InsuranceTypeID, alongside the CarrierID and CarrierName.",
        "operationId": "getInsurancePlansByCarrier",
        "parameters": [
          {
            "name": "CarrierID",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "Unique identifier for the insurance carrier."
          }
        ],
        "responses": {
          "200": {
            "description": "A list of insurance plans for the specified carrier.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "CarrierID": {
                        "type": "integer",
                        "description": "Unique identifier for the insurance carrier."
                      },
                      "CarrierName": {
                        "type": "string",
                        "description": "Name of the insurance carrier."
                      },
                      "InsuranceTypeID": {
                        "type": "integer",
                        "description": "Identifier for the type of insurance."
                      },
                      "PlanID": {
                        "type": "integer",
                        "description": "Unique identifier for the insurance plan."
                      },
                      "PlanName": {
                        "type": "string",
                        "description": "Name of the insurance plan."
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid request parameters."
          },
          "404": {
            "description": "Carrier not found."
          },
          "500": {
            "description": "Internal server error."
          }
        }
      }
    },
    "/react/eligibility/records/system/{SystemID}": {
      "get": {
        "description": "Retrieve a list of insurance plans that are in-network (indicated by 'InNetwork' being set to 1) for a specific hospital system, identified by SystemID. This endpoint lists  plans that are in-network, providing details such as CarrierName, EligibilityID, , PlanID, and PlanName.",
        "operationId": "getInNetworkInsurancePlansBySystem",
        "parameters": [
          {
            "name": "SystemID",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "Unique identifier for the hospital system. The response includes insurance plans that are marked as in-network for this system."
          }
        ],
        "responses": {
          "200": {
            "description": "A list of insurance plans that are in-network for the specified hospital system. Plans are considered in-network if 'InNetwork' is set to 1.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "CarrierID": {
                        "type": "integer",
                        "description": "Unique identifier for the insurance carrier."
                      },
                      "CarrierName": {
                        "type": "string",
                        "description": "Name of the insurance carrier."
                      },
                      "EligibilityID": {
                        "type": "integer",
                        "description": "Unique identifier for the eligibility record."
                      },
                      "InNetwork": {
                        "type": "integer",
                        "description": "Indicates whether the plan is in-network (1) or not (0)."
                      },
                      "InsuranceTypeID": {
                        "type": "integer",
                        "description": "Identifier for the type of insurance."
                      },
                      "LocationID": {
                        "type": "integer",
                        "description": "Identifier for the location."
                      },
                      "PlanID": {
                        "type": "integer",
                        "description": "Unique identifier for the insurance plan."
                      },
                      "PlanName": {
                        "type": "string",
                        "description": "Name of the insurance plan."
                      },
                      "SystemID": {
                        "type": "integer",
                        "description": "Identifier for the hospital system."
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid request parameters."
          },
          "404": {
            "description": "System not found."
          },
          "500": {
            "description": "Internal server error."
          }
        }
      }
    },
    "/react/eligibility/records/system/{SystemID}/location/{LocationID}": {
      "get": {
        "description": "Retrieve a list of  plans that are in-network for a system and location, identified by SystemID and LocationID. Provides focused set of results, detailing in networks plans at a particular location, including  CarrierName,  InNetwork status,  and PlanName.",
        "operationId": "getInNetworkInsurancePlansBySystemAndLocation",
        "parameters": [
          {
            "name": "SystemID",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "Unique identifier for the hospital system."
          },
          {
            "name": "LocationID",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "Unique identifier for the hospital location."
          }
        ],
        "responses": {
          "200": {
            "description": "A list of in-network insurance plans for the specified hospital system and location. Only plans with 'InNetwork' set to 1 are included.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "CarrierID": {
                        "type": "integer",
                        "description": "Unique identifier for the insurance carrier."
                      },
                      "CarrierName": {
                        "type": "string",
                        "description": "Name of the insurance carrier."
                      },
                      "EligibilityID": {
                        "type": "integer",
                        "description": "Unique identifier for the eligibility record."
                      },
                      "InNetwork": {
                        "type": "integer",
                        "description": "Indicates whether the plan is in-network (1) or not (0)."
                      },
                      "InsuranceTypeID": {
                        "type": "integer",
                        "description": "Identifier for the type of insurance."
                      },
                      "LocationID": {
                        "type": "integer",
                        "description": "Identifier for the location."
                      },
                      "PlanID": {
                        "type": "integer",
                        "description": "Unique identifier for the insurance plan."
                      },
                      "PlanName": {
                        "type": "string",
                        "description": "Name of the insurance plan."
                      },
                      "SystemID": {
                        "type": "integer",
                        "description": "Identifier for the hospital system."
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid request parameters."
          },
          "404": {
            "description": "System or Location not found."
          },
          "500": {
            "description": "Internal server error."
          }
        }
      }
    },
    "/db_admin/tables": {
      "get": {
        "description": "Retrieve a list of all tables present in the database. This endpoint is primarily used for database administration and management purposes.",
        "operationId": "getDatabaseTables",
        "responses": {
          "200": {
            "description": "A list of all database tables.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "description": "Name of the database table."
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error."
          }
        }
      }
    },
    "/db_admin/columns/{table_name}": {
      "get": {
        "description": "Retrieve a list of columns for a specified table in the database. This endpoint is used for obtaining detailed schema information about a specific table, identified by its name.",
        "operationId": "getColumnsForTable",
        "parameters": [
          {
            "name": "table_name",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The name of the database table for which to retrieve column information."
          }
        ],
        "responses": {
          "200": {
            "description": "A list of columns for the specified database table.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "ColumnName": {
                        "type": "string",
                        "description": "Name of the column in the database table."
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid table name provided."
          },
          "404": {
            "description": "Table not found."
          },
          "500": {
            "description": "Internal server error."
          }
        }
      }
    },
    "/react/charges/billingcode/{BillingCode}": {
      "get": {
        "description": "Retrieve detailed charge information for a specific billing code. Due to the large size of the data, users are prompted to filter results by SystemName or LocationName. The endpoint returns information such as various carrier charges, gross charges, and service descriptions.",
        "operationId": "getChargesByBillingCode",
        "parameters": [
          {
            "name": "BillingCode",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Billing code for which to retrieve charge information."
          },
          {
            "name": "SystemName",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            },
            "description": "Optional filter for the hospital system name."
          },
          {
            "name": "LocationName",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            },
            "description": "Optional filter for the hospital location name."
          }
        ],
        "responses": {
          "200": {
            "description": "Charge information for the specified billing code, optionally filtered by system or location.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid request parameters."
          },
          "404": {
            "description": "Billing code not found."
          },
          "500": {
            "description": "Internal server error."
          }
        }
      }
    },
    "/react/charges/description/{Description}": {
      "get": {
        "description": "Retrieve detailed charge information based on a service description. This endpoint returns data similar to the billing code endpoint but allows users to search by a service description instead. The data includes various carrier charges, gross charges, service descriptions, and more.",
        "operationId": "getChargesByDescription",
        "parameters": [
          {
            "name": "Description",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Service description for which to retrieve charge information."
          }
        ],
        "responses": {
          "200": {
            "description": "Charge information based on the specified service description.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid request parameters."
          },
          "404": {
            "description": "Description not found."
          },
          "500": {
            "description": "Internal server error."
          }
        }
      }
    }
  }
}
